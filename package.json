{
  "name": "sat-law-unified",
  "version": "1.0.0",
  "description": "統合された法令閲覧システム",
  "scripts": {
    "build": "webpack --mode=production",
    "build:dev": "webpack --mode=development",
    "watch": "webpack -w --mode=development",
    "build:api": "webpack --config webpack.config.js --env entry=api",
    "build:viewer": "webpack --config webpack.config.js --env entry=viewer",
    "generate:typescript-html": "tsx src/node-renderer/generate-typescript-html.ts",
    "format:html": "tsx src/node-renderer/format-html.ts",
    "generate:all-react-html": "tsx src/node-renderer/generate-all-react-html.ts",
    "test:single": "node --max-old-space-size=16384 --expose-gc ./node_modules/tsx/dist/cli.mjs src/node-renderer/test-single-law.ts",
    "test:next": "node --max-old-space-size=16384 --expose-gc ./node_modules/tsx/dist/cli.mjs src/node-renderer/test-single-law.ts next",
    "test:next-unpassed": "node --max-old-space-size=16384 --expose-gc ./node_modules/tsx/dist/cli.mjs src/node-renderer/test-next-unpassed.ts",
    "test:stats": "tsx src/node-renderer/update-test-status.ts stats",
    "test:reset": "tsx src/node-renderer/reset-test-status.ts",
    "test:all": "tsx src/node-renderer/run-all-tests.ts"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "autoprefixer": "^10.4.21",
    "css-loader": "^7.1.2",
    "js-beautify": "^1.15.4",
    "jsdom": "^27.0.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.13",
    "terser-webpack-plugin": "^5.3.9",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "buffer": "^6.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "fast-xml-parser": "^5.2.5",
    "hotkeys-js": "^3.8.7",
    "log4javascript": "^1.4.16",
    "mark.js": "^8.11.1",
    "parenthesis": "^3.1.8",
    "pdfjs-dist": "^2.9.359",
    "pino": "^9.9.5",
    "rangy": "^1.3.0",
    "rangy-classapplier": "^2.1.0",
    "rangy2": "^2.1.0",
    "resize-sensor": "0.0.6",
    "stream": "^0.0.2",
    "string_decoder": "^1.3.0",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^2.1.1",
    "xml-js": "^1.6.11",
    "zod": "^4.1.8"
  },
  "browser": {
    "crypto": false
  },
  "private": true
}
